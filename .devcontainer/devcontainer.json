{
    "name": "afl-parity",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "UV_VERSION": "latest",
            "DEBIAN_VERSION": "bookworm"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "containerEnv": {
        "PYTHONUNBUFFERED": "True",
        "UV_LINK_MODE": "copy",
        "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv"
    },
    "postCreateCommand": "uv sync --frozen && uv venv && uv add --dev ruff && uv add pre-commit && /home/vscode/.venv/bin/pre-commit install && /home/vscode/.venv/bin/pre-commit run --all-files",
    "remoteUser": "vscode"
}
